<Window x:Class="PayrollSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Радость бухгалтера - Система начисления заработной платы" 
        Height="800" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="641*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="174*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource PrimaryHueDarkBrush}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="15,20,15,30">
                    <TextBlock Text="Радость бухгалтера" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White" 
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="txtCurrentUser" 
                               Text="Пользователь: admin" 
                               FontSize="12" 
                               Foreground="LightGray" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button DockPanel.Dock="Bottom" 
                        Content="Выход" 
                        Click="BtnLogout_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="15,10,15,20"/>

                <ListBox x:Name="MenuList" 
                         SelectionChanged="MenuList_SelectionChanged"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#3F51B5"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#303F9F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem Tag="Employees">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Сотрудники"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Timesheet">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ClockOutline" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Табель времени"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Payroll">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Calculator" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Расчёт зарплаты"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Deductions">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Minus" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Удержания"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Reports">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileChart" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Отчёты"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Admin" x:Name="menuAdmin">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cog" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Администрирование"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </DockPanel>
        </Border>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
