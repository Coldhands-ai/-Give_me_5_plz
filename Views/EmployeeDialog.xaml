<Window x:Class="PayrollSystem.Views.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Сотрудник" 
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}" SizeToContent="WidthAndHeight">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="txtTitle"
                   Text="Добавление сотрудника" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBox x:Name="txtLastName"
                         materialDesign:HintAssist.Hint="Фамилия"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="txtFirstName"
                         materialDesign:HintAssist.Hint="Имя"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="txtMiddleName"
                         materialDesign:HintAssist.Hint="Отчество"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <DatePicker x:Name="dpBirthDate"
                            materialDesign:HintAssist.Hint="Дата рождения"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,0,15"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <DatePicker x:Name="dpHireDate"
                            materialDesign:HintAssist.Hint="Дата приёма"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,0,15"/>

                <ComboBox x:Name="cmbPosition"
                          materialDesign:HintAssist.Hint="Должность"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="PositionName"
                          SelectedValuePath="PositionID"
                          Margin="0,0,0,15"/>

                <ComboBox x:Name="cmbDepartment"
                          materialDesign:HintAssist.Hint="Отдел"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="DepartmentName"
                          SelectedValuePath="DepartmentID"
                          Margin="0,0,0,15"/>

                <TextBox x:Name="txtSalary"
                         materialDesign:HintAssist.Hint="Оклад"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" 
                    Click="BtnCancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,10,0"
                    Width="100"/>
            <Button Content="Сохранить" 
                    Click="BtnSave_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
