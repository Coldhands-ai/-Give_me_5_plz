<Page x:Class="PayrollSystem.Views.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Отчёты"
      Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Отчёты" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <WrapPanel Grid.Row="1" Margin="0,0,0,20">
            <materialDesign:Card Padding="20" Margin="0,0,15,0" Width="200">
                <StackPanel>
                    <TextBlock Text="Всего сотрудников" FontSize="12" Foreground="Gray"/>
                    <TextBlock x:Name="txtEmployeeCount" Text="0" FontSize="32" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                </StackPanel>
            </materialDesign:Card>
            
            <materialDesign:Card Padding="20" Width="250">
                <StackPanel>
                    <TextBlock Text="ФОТ за выбранный период" FontSize="12" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalPayroll" Text="0 руб." FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                </StackPanel>
            </materialDesign:Card>
        </WrapPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="cmbReportMonth"
                          materialDesign:HintAssist.Hint="Месяц"
                          Width="150"
                          Margin="0,0,10,0"/>
                <ComboBox x:Name="cmbReportYear"
                          materialDesign:HintAssist.Hint="Год"
                          Width="100"
                          Margin="0,0,10,0"/>
                <Button Content="Сформировать отчёт" 
                        Click="BtnGenerateReport_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Расчётный лист (PDF)" 
                        Click="BtnExportPdf_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,10,0"/>
                <Button Content="Зарплатная ведомость (Excel)" 
                        Click="BtnExportExcel_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="3"
                  x:Name="dgReport"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  materialDesign:DataGridAssist.CellPadding="13 8 8 8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="*"/>
                <DataGridTextColumn Header="Часы" Binding="{Binding WorkedHours, StringFormat={}{0:N1}}" Width="70"/>
                <DataGridTextColumn Header="Начислено" Binding="{Binding BaseSalary, StringFormat={}{0:N2}}" Width="100"/>
                <DataGridTextColumn Header="Премия" Binding="{Binding Bonus, StringFormat={}{0:N2}}" Width="80"/>
                <DataGridTextColumn Header="Штраф" Binding="{Binding Penalty, StringFormat={}{0:N2}}" Width="80"/>
                <DataGridTextColumn Header="Удержания" Binding="{Binding TotalDeductions, StringFormat={}{0:N2}}" Width="90"/>
                <DataGridTextColumn Header="К выплате" Binding="{Binding NetSalary, StringFormat={}{0:N2}}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,15,0,0">
            <TextBlock Text="Итого к выплате: " FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="txtReportTotal" Text="0 руб." FontWeight="Bold" FontSize="16"
                       Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
        </StackPanel>
    </Grid>
</Page>
