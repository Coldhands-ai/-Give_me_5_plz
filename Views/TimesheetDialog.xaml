<Window x:Class="PayrollSystem.Views.TimesheetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавление записи в табель" 
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Добавление записи в табель" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <ComboBox x:Name="cmbEmployee"
                      materialDesign:HintAssist.Hint="Сотрудник"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="EmployeeID"
                      Margin="0,0,0,15"/>

            <DatePicker x:Name="dpDate"
                        materialDesign:HintAssist.Hint="Дата"
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                        Margin="0,0,0,15"/>

            <TextBox x:Name="txtHours"
                     materialDesign:HintAssist.Hint="Часы работы"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,15"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Click="BtnCancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,10,0"/>
            <Button Content="Сохранить" 
                    Click="BtnSave_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
